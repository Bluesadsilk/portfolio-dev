---
import ReactIcon from "../icons/React.astro";
import Nodejs from "../icons/Nodejs.astro";

const TAGS = {
  REACT: {
    name: "React.js",
    class: "bg-black text-white",
    icon: ReactIcon,
  },

  NODEJS: {
    name: "NodeJs",
    class: "bg-black text-white",
    icon: Nodejs,
  },
};

const PROJECTS = [
  {
    title: "MineSweeper",
    description: "MineSweeper game with React.js",
    link: "https://www.nomu.dev/MineSweeper",
    github: "https://www.github.com/nomudev/MineSweeper",
    image: "/src/images/mockupMineSweeper.png",
    tags: [TAGS.REACT, TAGS.NODEJS],
  },
  {
    title: "Tic Tac Toe",
    description: "Tic Tac Toe game with React.js",
    link: "https://www.nomu.dev/MineSweeper",
    github: "https://www.github.com/nomudev/MineSweeper",
    image: "/src/images/mockupTicTacToe.png",
    tags: [TAGS.REACT, TAGS.NODEJS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, github, link }) => (
    <article class="mb-20">
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tag) => (
          <li>
            <span
              class={` flex gap-x-2 rounded-full text-xm items-center ${tag.class} py-2 px-2 mb-3`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Project Screenshot ${image}`}
      />
    </article>
  ))
}
