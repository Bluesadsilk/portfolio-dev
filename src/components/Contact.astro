<div class="flex flex-col gap-y-4 justify-center items-center">
  <form id="contact-form">
    <div class="flex flex-col gap-2">
      <div class="form-group">
        <label for="NameField" class="block mb-1">First Name</label>
        <input
          id="NameField"
          autocomplete="additional-name"
          name="Name"
          type="text"
          class="w-full border rounded-md px-3 py-2 focus:outline-blue-500"
          required
        />
      </div>

      <div class="form-group">
        <label for="SurnameField" class="block mb-1">Last Name</label>
        <input
          id="SurnameField"
          autocomplete="additional-name"
          name="Surname"
          type="text"
          class="w-full border rounded-md px-3 py-2 focus:outline-blue-500"
          required
        />
      </div>

      <div class="form-group">
        <label for="EmailField" class="block mb-1">Email</label>
        <input
          id="EmailField"
          autocomplete="email"
          name="Email"
          type="email"
          class="w-full border rounded-md px-3 py-2 focus:outline-blue-500"
          required
        />
      </div>

      <div class="form-group">
        <label for="PhoneField" class="block mb-1">Phone Number</label>
        <input
          id="PhoneField"
          autocomplete="tel"
          name="Phone"
          type="number"
          class="w-full border rounded-md px-3 py-2 focus:outline-blue-500"
          required
        />
      </div>

      <div class="form-group">
        <label for="MessageField" class="block mb-1">Message</label>
        <textarea
          id="MessageField"
          name="Message"
          rows="4"
          class="w-full border rounded-md px-3 py-2 focus:outline-blue-500"
          required></textarea>
      </div>
    </div>

    <div class="text-center mt-4">
      <button
        type="submit"
        class="w-full bg-blue-500 text-white font-semibold px-4 py-2 rounded-md cursor-pointer hover:bg-blue-600 transition duration-300"
      >
        Send
      </button>
    </div>
  </form>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("contact-form");

    if (form instanceof HTMLFormElement) {
      form.addEventListener("submit", async (event) => {
        event.preventDefault();

        const formData = new FormData(form);
        const url =
          "https://script.google.com/macros/s/AKfycbz0sF141BN24Lm_N22lytfUkhZO77XFt-9CWL9XjHubtXQNfiODdioD2xeLAKsLJAT6/exec"; // Replace with your Google Apps Script URL

        try {
          const response = await fetch(url, {
            method: "POST",
            body: formData,
          });

          const data = await response.json();
          if (data.result === "success") {
            alert("¡Tu mensaje ha sido enviado correctamente!");
            form.reset();
          } else {
            alert(
              "Hubo un error al enviar el mensaje. Por favor, inténtalo de nuevo más tarde."
            );
          }
        } catch (error) {
          console.error("Error:", error);
          alert(
            "Hubo un error al enviar el mensaje. Por favor, inténtalo de nuevo más tarde."
          );
        }
      });
    } else {
      console.error("El elemento del formulario no fue encontrado.");
    }
  });
</script>
