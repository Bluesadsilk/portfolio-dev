---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/socialPill.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Contact from "../components/Contact.astro";

import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import UserIcon from "../icons/User.astro";

import PhoneIcon from "../icons/Phone.astro";
---

<Layout
  title="Portfolio de Nomudev - Desarrollador, Programador Web y Multiplataforma con 1 año de experiencia"
  description="Contrata a Nomudev desarrollador Java, programador React, Javascript, MySql, diseño de proyectos, rapida adaptacion a cualquier entorno."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32" id="top">
      <img
        class="rounded-full w-12 h-12 mb-4"
        src="./src/images/nomudev.png"
        alt="nomudev-foto"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hello there, I'm nomudev <a
          href="https://www.linkedin.com/in/nomudev"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available for work</Badge>
        </a>
        <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]:">
          <span class="text-lightblue-100/90">
            Embarking on my journey as a</span
          >
          <span class="text-yellow-200/90">
            Web and App fullstack developer.</span
          ><span class="text-red-100/90">Hailing from Valencia, Spain.</span>
          <span class="opacity-75"
            >Specializing in quickly mastering any technology.</span
          >
        </h2>
        <nav class="flex gap-4 mt-8 flex-wrap">
          <SocialPill href="https://www.linkedin.com/in/nomudev">
            <LinkedInIcon class="size-4 md:size-6" /> LinkedIn
          </SocialPill>
          <SocialPill href="https://www.github/nomudev">
            <GithubIcon class="size-4 md:size-6" /> Github
          </SocialPill>
          <SocialPill href="mailto:noelmrodri@gmail.com">
            <MailIcon class="size-4 md:size-6" /> Mail me
          </SocialPill>
        </nav>
      </h1>
    </SectionContainer>

    <SectionContainer id="experience">
      <br /><br /><br />
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <br /><br /><br />
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="about-me" class="gap-y-100">
      <br /><br /><br />
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <UserIcon class="size-7" />
        About me
      </h2>
      <AboutMe />
    </SectionContainer>

    <SectionContainer id="contact">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <PhoneIcon class="w-7 h-7" />
        Contact
      </h2>
      <div class="flex row-auto gap-x-20 gap-y-20 justify-center items-center">
        <div>
          <div class"flex row-auto">
            <div class="">
              <div class="form-group mb-2">
                <label class="block mb-2">First Name</label>
                <input type="text" class="w-full border rounded-md px-3 py-2" />
              </div>
            </div>

            <div class="">
              <div class="form-group mb-2">
                <label class="block mb-2">Surname</label>
                <input type="text" class="w-full border rounded-md px-3 py-2" />
              </div>
            </div>

            <div class="">
              <div class="form-group mb-2">
                <label class="block mb-2">Email</label>
                <input type="text" class="w-full border rounded-md px-3 py-2" />
              </div>
            </div>

            <div class="">
              <div class="form-group mb-2">
                <label class="block mb-2">Phone</label>
                <input type="text" class="w-full border rounded-md px-3 py-2" />
              </div>
            </div>

            <div class="col-span-full">
              <div class="form-group mb-2">
                <label class="block mb-2">Message</label>
                <textarea class="w-full border rounded-md px-3 py-2"></textarea>
              </div>
            </div>

            <div class="col-span-full">
              <input
                type="submit"
                value="Submit"
                class="w-full bg-blue-500 text-white font-semibold px-4 py-2 rounded-md cursor-pointer hover:bg-blue-600 transition duration-300"
              />
            </div>
          </div>
        </div>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d98646.9713581695!2d-0.4439116513183561!3d39.407888824654535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd604f4cf0efb06f%3A0xb4a351011f7f1d39!2sValencia!5e0!3m2!1ses!2ses!4v1709566526278!5m2!1ses!2ses"
          width="300"
          height="300"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </SectionContainer>
  </main>
</Layout>
